{
  "name" : "gitlab",
  "chef_type": "role",
  "json_class" : "Chef::Role",
  "description" : "Gitlab role",
  "run_list": [
    "recipe[apt]",
    "recipe[users::sysadmins]",
    "recipe[sudo]",
    "recipe[rvm::ruby_193]",
    "recipe[gitlab]"
    ],
  "default_attributes": {
    "nginx": {
      "init_style": "init"
      },
    "rvm": {
      "ruby": {
        "version": "1.9.3",
        "default": "true"
      }
    },
    "authorization": {
      "sudo": {
        "groups": ["admin", "wheel", "sysadmin"],
        "users" : ["fim", "ip"],
        "passwordless": true
        }
      }
    }
}
