{
  "json_class": "Chef::Node",
  "name": "gitlab",
  "chef_environment": "_default",
  "run_list": [
    "recipe[apt]",
    "recipe[users::sysadmins]",
    "recipe[sudo]",
    "role[gitlab]"
  ],
  "attributes": {
    "gitlab": {
      "hostname": "git.subbota.net",
      "web_host": "git.subbota.net",
      "email_host": "localhost"
    },
    "authorization": {
      "sudo": {
        "groups": ["admin","wheel", "sysadmin"],
        "users" : ["fim","ip"],
        "passwordless": true
      }
    }
  }
}
